        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pw)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Join_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cs_idx">Edit</a> |
